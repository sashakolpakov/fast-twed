[MAIN]
fail-under=9.5

[FORMAT]
max-line-length=128   # Longer lines
max-module-lines=1024 # Longer modules

[DESIGN]
max-locals=16                  # Variables per function
max-statements=64             # Statements per function
max-args=8                    # Arguments per function
max-positional-arguments=8    # Positional arguments per function
max-attributes=16             # Attributes per class


[MESSAGES CONTROL]
disable=
    protected-access,
    too-few-public-methods,
    format,
    fixme,
    trailing-whitespace,
    invalid-name,
    import-error,
    duplicate-code,
